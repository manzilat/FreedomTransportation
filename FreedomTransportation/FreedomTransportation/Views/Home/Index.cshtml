@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Freedom Transporation Home Page</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
</head>
<body>
    <h1>Freedom Transportation</h1>
    <p>At freedom transportation we offer the best rates possible in Milwaukee.</p>

    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Customer"))
        {
            <h1>You are now logged in.</h1>
            <h2>Choose from several options below:</h2>
            <ul>
                <li><a href="/FutureSchedule/Create">Schedule You're Ride For Later</a></li>
                <li><a href="/Home/Demo1">Calculate Cost of Ride</a></li>
                <li><a href="/Feedback/Index">Give Us Feedback</a></li>
            </ul>
        }

        if (User.IsInRole("Driver"))
        {
            <h1>Hello.</h1>
            <h2>Choose from several options below:</h2>
            <ul>
                <li><a href="/SchedulingRides/Index">Check You're Schedule</a></li>
                <li><a href="/FutureSchedule/Index">View Rides</a></li>
                <li><a href="/Trips/Index">Confirmation</a></li>
                <li><a href="/Drivers/MapsForDriver">Directions</a></li>
                <li><a href="/Home/Index2">Map</a></li>
            </ul>
        }

        if (User.IsInRole("TransportationProvider"))
        {
            <h1>Hello.</h1>
            <h2>Choose from several options below:</h2>
            <ul>
                <li><a href="/SchedulingRides/Index">Current Request</a></li>
                <li><a href="/FutureSchedule/Index">Ride Request</a></li>
                <li><a href="/Drivers/Index">View Drivers</a></li>
                <li><a href="/Trips/Index">Serviced Rides</a></li>
            </ul>
        }
    }
    else
    {
        //No user is logged in
        <h2>Please login.</h2>
        <h3>How To - Instructions</h3>
        <ol>
            <li>Customer must login</li>
            <li>Customer must request a ride</li>
            <li>Customer must enter address and desintation</li>
            <li>Our serivce will compute distance and cost</li>
            <li>Customer must make a payment for ride to be scheduled</li>
        </ol>
        <p><strong>Note:</strong> All employees must login to view all customer requests.</p>
    }
</body>
</html>
