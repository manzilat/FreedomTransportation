@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Freedom Transporation Home Page</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
</head>
<body>
    <h1>Freedom Transportation</h1>
    <p>At freedom transportation we offer the best rates possible in Milwaukee.</p>
    @if (!User.Identity.IsAuthenticated) //Customer is not logged in
    {
        <h2>Please login.</h2>
        <h3>How To - Instructions</h3>
        <ol>
            <li>Customer must login</li>
            <li>Customer must request a ride</li>
            <li>Customer must enter address and desintation</li>
            <li>Our serivce will compute distance and cost</li>
            <li>Customer must make a payment for ride to be scheduled</li>
        </ol>
        <p><strong>Note:</strong> All employees must login to view all customer requests.</p>
    }
    else //Customer is logged in
    {
        //You have two options to go to differnet pages after login
        <h1>You are now logged in.</h1>
        <h2>Choose from several options below:</h2>
        <ul>
            <li><a href="/FutureSchedule/Create">Book A Ride</a></li>
            <li><a href="/Home/Demo1">Calculate Cost of Ride</a></li>
            <li><a href="/Feedback/Index">Give Us Feedback</a></li>
        </ul>
        //RedirectToAction("Action","Controller");
        //Response.Redirect("/Path/");
    }
</body>
</html>
