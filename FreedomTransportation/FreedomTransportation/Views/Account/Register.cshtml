@model FreedomTransportation.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="text-light">Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-1 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-1 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.firstName, new { @class = "col-md-2 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.firstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.lastName, new { @class = "col-md-2 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.lastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.phone, new { @class = "col-md-2 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.phone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.street, new { @class = "col-md-1 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.street, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.city, new { @class = "col-md-1 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.city, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.state, new { @class = "col-md-1 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.state, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.zip, new { @class = "col-md-1 control-label bg-dark text-light rounded" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.zip, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Account Type", new { @class = "col-md-2 control-label bg-dark text-light rounded" })
        <div class="col-md-10 text-light">
            <label>Customer</label>
            @Html.RadioButtonFor(x => x.accountType, "Customer")<br />
            <label>Driver</label>
            @Html.RadioButtonFor(x => x.accountType, "Driver")<br />
            <label>Provider</label>
            @Html.RadioButtonFor(x => x.accountType, "Provider")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
